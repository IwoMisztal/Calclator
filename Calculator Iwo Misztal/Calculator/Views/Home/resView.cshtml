@model Calculator.Models.IndexViewModel

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="https://use.fontawesome.com/110cd7602b.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="main-wrapper"
    <div class="history">
        @{
        var nums = new List<double>();
        foreach (Operations r in Model.AllResults)
        {
            nums.Add(r.Result);
        }
        <ul>
            @foreach (var item in nums)
            {
                <li>@item</li>
            }

        </ul>
        }
    </div>
    <div class="calculator-wrapper">
        <form method="post">

            <input id="calc" type="text" name="input" value="@Model.NewResult" />

            <input type="submit" name="save" value="Count" />

        </form>
        <div class="keyboard-nums">
         
            <div class="btn ops">=</div>
            <div class="btn ops"><=</div>
            <div class="btn">7</div>
            <div class="btn">8</div>
            <div class="btn">9</div>
            <div class="btn">4</div>
            <div class="btn">5</div>
            <div class="btn">6</div>
            <div class="btn">1</div>
            <div class="btn">2</div>
            <div class="btn">3</div>
            <div class="btn">0</div>

        </div>
        <div class="keyboard-ops">

            <div class="ops">/</div>
            <div class="ops">X</div>
            <div class="ops">-</div>
            <div class="ops">+</div>
        </div>
    </div>





</div>

</body>
</html>



